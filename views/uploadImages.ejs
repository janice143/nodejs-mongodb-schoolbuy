<form action="/upload" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" name="title" value=""  placeholder="Title">
        <br>
        
        <label for="">description</label>
        <textarea name="description" cols="30" rows="10" placeholder="Description"></textarea>
        <br>

        <label for="">keyword</label>
        <input type="text" name="keyword" value=""  placeholder="keyword1">
        <input type="text" name="keyword" value=""  placeholder="keyword2">
        <input type="text" name="keyword" value=""  placeholder="keyword3">
        <br>

        <label for="">Category</label>
        <select name="categoryName">
            <% categories.forEach(cat=>{ %>
                <option value="<%= cat.categoryName %>"><%= cat.categoryName %></option>
            <% }) %>
        </select>

        <br>

        <label for="">price</label>
        <input type="text" name="price" value=""  placeholder="price">
        <br>
        
        <label for="">上传一张主要的图片</label>
        <input type="file" class="form-control-file" name="uploaded_file" >
        <br>

        <label for="">上传多张其他角度的图片，不超过6张</label>
        <input type="file" class="form-control-file" name="uploaded_file" multiple>
        <br>
        

        <input type="submit" value="Get me the stats!" class="btn btn-default">
    </div>
</form>


